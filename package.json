{
  "name": "renovate-config-uportal",
  "version": "1.0.0",
  "description": "shared renovate configuration for uPortal projects",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChristianMurphy/renovate-config-uportal.git"
  },
  "author": "Christian Murphy <christian.murphy.42@gmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/ChristianMurphy/renovate-config-uportal/issues"
  },
  "homepage": "https://github.com/ChristianMurphy/renovate-config-uportal#readme",
  "renovate-config": {
    "extends": [
      "config:base",
      ":rebaseStalePrs",
      ":preserveSemverRanges",
      ":semanticPrefixChore",
      ":disableRateLimiting"
    ],
    "gradle": {
      "enabled": true
    },
    "renovateFork": true,
    "packageRules": [
      {
        "groupName": "uPortal",
        "packagePatterns": [
          "^org.jasig.portal:"
        ]
      },
      {
        "groupName": "uPortal web components",
        "packagePatterns": [
          "^org.webjars.npm:uportal"
        ]
      },
      {
        "groupName": "Person Directory",
        "packagePatterns": [
          "^org.apereo.service.persondir"
        ]
      },
      {
        "groupName": "Lucene",
        "packagePatterns": [
          "^org.apache.lucene"
        ]
      },
      {
        "groupName": "Mockito",
        "packagePatterns": [
          "^org.mockito"
        ]
      },
      {
        "groupName": "User Type",
        "packagePatterns": [
          "^org.jadira.usertype:usertype.core"
        ]
      },
      {
        "groupName": "JAXB2",
        "packagePatterns": [
          "^org.jvnet.jaxb2_commons"
        ]
      },
      {
        "groupName": "Resource Server",
        "packagePatterns": [
          "^org.jasig.resourceserver"
        ]
      }
    ]
  }
}
